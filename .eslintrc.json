{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": ["**/build/*"],
  "plugins": ["@typescript-eslint", "svelte3"],
  "overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
  "settings": {
    "svelte3/typescript": true,
    "import/resolver": {
        "alias": {
          "map": [
            ["@", "./src"]
          ],
        
        }
      }
  },
  "rules": {
    "import/first": 0
  }
}
