{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": ["**/build/*"],
  "plugins": [
    "@typescript-eslint",
    "svelte3",
    "jest-dom",
    "testing-library"
  ],
  "overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3"
    },
    {
      "files": ["**/*.test.ts"],
      "env": {
        "jest": true
      }
    }
  ],
  "settings": {
    "svelte3/typescript": true,
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]],
        "extensions": [".ts", ".js", ".svelte", ".json"]
      }
    }
  },
  "rules": {
    "import/first": 0,
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ],
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling"]
      }
    ]
  }
}
